{
    "compilerOptions": {
        "target": "es2017",
        "alwaysStrict": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
    }
}